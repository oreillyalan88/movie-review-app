<div class="col-md-6 col-md-offset-3">

	<div class="edit-review-form">

        <h1>Edit Review</h1>
        
        <%= simple_form_for([@movie, @review]) do |f| %>
        
            <label class="rating-form">Rating</label>
            <div id="rating-form">
            </div>
            <%= f.input :comment %>
            <%= f.button :submit, :class => "btn-custom2" %>
        <% end %>
    
    </div>
</div>


<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>